{
  "name": "gate-agent",
  "version": "0.1.0",
  "description": "Configurable CLI tool for running quality gates across JavaScript/TypeScript projects",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "gate-agent": "./dist/cli.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "quality",
    "gates",
    "linting",
    "testing",
    "code-quality",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "yaml": "^2.6.1",
    "chalk": "^5.3.0",
    "ora": "^8.1.1",
    "execa": "^9.5.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.8",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2"
  }
}
